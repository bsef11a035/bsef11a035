<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.7.1.js"></script>
    <link href="~/bootstrap.css" rel="stylesheet" />
    <script src="~/bootstrap.js"></script>

    <script>
        
       $(document).ready(function (){

           $('#model').empty();
           
            $.getJSON("/Home/GetCandidate", function (data) {
                $.each(data, function (i, item) {
                    $('#model').append('<option value=' + item.Name + '>' + item.Name + '</optoin>');
                });
            });


            $('#Search1').click(function () {

              
                $('#Searched').empty();
                $.getJSON("/Home/GetCandidateOn?u="+ $('#model').val(), function (data) {
                   
                    $('#Searched').append(data.Name);
                    $('#Searched').append(data.Cnic);
                    $('#Searched').append(data.Description);
                    $('#Searched').append(data.Cnic);
                    $('#Searched').append(data.Party);
                    $('#Searched').append(data.Qualification);
                    $('#Searched').append(data.Account);


                    });

            });



        });
        </script>
</head>
<body>
    <nav class="navbar navbar-inverse" role="navigation">
        <div class="navbar-header" >
            <a class="navbar-brand" href="#" > Web Based Polling System</a>
       
        <div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">Home</a></li>
                <li ><a href="Home/parties">Political Parties</a></li>
                <li ><a href="/Home/CandidateDetails">Candidates</a></li>
                <li ><a href="/Home/VoterDetails">Voters</a></li>
                <li ><a href="/Home/NAResult">Results</a></li>
                
                <li ><a href="/Home/SignUp">Sign Up Options</a></li>

                <li ><a href="/Home/logInOptions">Log In</a></li>


               

            </ul>
   
            @*<form class="navbar-form navbar-left pull-right" role="search">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="search" />

                </div>
                <button type="submit" class="btn-success">Submit</button>
                
            </form>*@

           
        </div>
                    <label for="select" class="col-lg-2 control-label text-primary">Search</label>
                    <div class="col-lg-10">
                        <select class="form-control" id="model">
                            <option>Select Candidate...</option>

                        </select>

                        <input type="button" id="Search1" name="Search" value="Search" />
                    </div>
        </div>
    </nav>
    <div id="Searched">
        
    </div>
    <div class="progress progress-striped active">
  <div class="progress-bar progress-bar-success"  role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
    <span class="sr-only">45% Complete</span>
  </div>
</div>

    <div class="row">
        <div class="col-md-8">
            <img src="~/images/ecp.png" class="alert" />
            
           
        </div>
        <div class="col-md-4">
              <img class="active" src="~/images/yes.png" />
              
        </div>

    </div>
    @RenderBody()

    <footer class="modal-footer"> 
        <div class="col-md-3">
              <img class="active" src="~/images/foot.jpg " />
              
        </div>
        </br>
